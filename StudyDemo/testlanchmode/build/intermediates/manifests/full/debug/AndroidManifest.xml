<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testlanchmode"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.testlanchmode.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.testlanchmode.ActivityTop"
            android:launchMode="singleTop" />
        <activity android:name="com.example.testlanchmode.Main2Activity" />
        <activity android:name="com.example.testlanchmode.ActivityStandard2" />
        <activity
            android:name="com.example.testlanchmode.ActivitySingleInstance"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.example.testlanchmode.ActivitySingleTask"
            android:launchMode="singleTask" />
        <activity
            android:name="com.example.testlanchmode.ActivityStandard"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>